<h1>Jogos</h1>

<a href="/jogos/novo">Cadastrar Jogo</a>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Título</th>
    <th>Descrição</th>
    <th>Preço Base</th>
    <th></th>
  </tr>
  {{#each jogos}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.titulo}}</td>
      <td>{{this.descricao}}</td>
      <td>{{this.precoBase}}</td>
      <td>
        <a href="/jogos/{{this.id}}/atualizar">Atualizar</a>
        <form action="/jogos/excluir" method="post">
          <input type="hidden" value="{{this.id}}" name="id" >
          <input type="submit" value="Excluir">
        </form>
      </td>
    </tr>
  {{/each}}
</table>